<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/admin_events_images_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rest_events_images_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/global_top_appbar"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/list_of_Event_Images"
        style="@style/MaterialAlertDialog.Material3.Body.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List of Event Images"
        android:textAlignment="center"
        android:background="#141414"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/images_topbar"
        tools:ignore="MissingConstraints">

    </com.google.android.material.textview.MaterialTextView>

    <GridView
        android:id="@+id/grid_Event_images_admin"
        android:layout_width="401dp"
        android:layout_height="570dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:numColumns="2"
        app:layout_constraintBottom_toTopOf="@+id/delete_image_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_of_Event_Images"
        >

    </GridView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_image_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Delete Image"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>